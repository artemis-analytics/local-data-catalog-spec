{
  "$schema":"http://json-schema.org/draft-07/schema#",

  "definitions":{
    "distribution":{
      "type":"object",
      "properties":{
        "title":{"type":"string"},
	"description":{"type":"string"},
	"format":{"type":"string"},
	"encoding":{"type":"string"},
	"identifier":{"type":"string"},
	"downloadURL":{"type":"string"}
      }
    },
    "results":{
      "type":"object",
      "properties":{
        "file":{"type":"string"},
	"description":{"type":"string"}
      }
    },
    "scripts":{
      "type":"object",
      "properties":{
        "repositoryURL":{"type":"string"},
	"identifier":{"type":"string"},
	"description":{"type":"string"},
	"tag":{"type":"string"}
      }
    },
    "dataset":{
      "type":"object",
      "properties":{
        "title":{"type":"string"},
	"responsible":{"type":"string"},
        "description":{"type":"string"},
	"keyword":{"type":"string"},
	"publisher":{"type":"string"},
	"references":{
 	  "type":"array",
	  "items":{"type":"string"},
	  "default":[]
	},
	"identifier":{"type":"string"},
	"modified":{"type":"string"},
	"distributed":{
	  "type":"array",
	  "items":{"$ref":"#/definitions/distribution"},
	  "default":[]
	},
	"sources":{
	  "type":"array",
	  "items":{"type":"string"},
	  "default":[]
	},
	"results":{
	  "type":"array",
	  "items":{"$ref":"#/definitions/results"},
	  "default":[]
	},
	"scripts":{
	  "type":"array",
	  "items":{"$ref":"#/definitions/scripts"},
	  "default":[]
	},
	"revisionOf":{"type":"string"}
      }
    }
  },

  "type":"object",
  "properties":{
    "distribution":{"$ref":"#/definitions/distribution"},
    "results":{"$ref":"#/definitions/results"},
    "scripts":{"$ref":"#/definitions/scripts"},
    "dataset":{"$ref":"#/definitions/dataset"}
  }
}
